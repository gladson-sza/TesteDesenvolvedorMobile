<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewGridMovieThumb"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ice_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewGridMovieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="@string/titiulo_filme"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/textViewGridLikesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:drawableEnd="@drawable/ic_like"
                android:drawableRight="@drawable/ic_like"
                android:drawablePadding="8dp"
                android:text="@string/_0"
                android:textSize="18sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/textViewGridStarsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:drawableEnd="@drawable/ic_star_border_black_24dp"
                android:drawableRight="@drawable/ic_star_border_black_24dp"
                android:drawablePadding="8dp"
                android:text="@string/_0"
                android:textSize="18sp"
                android:layout_marginEnd="16dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>